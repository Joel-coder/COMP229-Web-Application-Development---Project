<%- include ../partials/header.ejs %>

  <%- include ../partials/main_nav.ejs %>
  
<main class="container w-100 ">
    <% if(messages.length > 0) {%>
    <div class="alert alert-danger">
        <%=messages %>
    </div>
    <% } %>

    <div class="row w-100">
        <div class="offset-md-4 col-md-4">
            <h1 class="mb-2 mt-5">Please Login</h1>
            <form  method="POST"  autocomplete="off">
                    <fieldset class="form-group">
                      
                        <input type="text" class="form-control" name="username" placeholder="Enter username" id="username" required autofocus>
                    </fieldset>
                    <fieldset class="form-group">
        
                        <input type="text" class="form-control" name="password" placeholder="Enter password" id="password" required>
                        <a class="a-register" href="/register"> Register Here</a>
                   </fieldset>

                   <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-primary" value="Login">
                    <a href="/">
                        <input type="button" class="btn btn-primary" value="Cancel">
                    </a>
                </fieldset>
            </form>
        </div>
    </div>
</main>
 
<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>
  




